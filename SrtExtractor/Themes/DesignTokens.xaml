<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- ============================================ -->
    <!-- COLOR PALETTE (Windows 11 Inspired)         -->
    <!-- ============================================ -->
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#0078D4</Color>
    <Color x:Key="PrimaryHoverColor">#106EBE</Color>
    <Color x:Key="PrimaryPressedColor">#005A9E</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="SuccessColor">#107C10</Color>
    <Color x:Key="WarningColor">#FFA500</Color>
    <Color x:Key="ErrorColor">#D13438</Color>
    <Color x:Key="InfoColor">#0078D4</Color>
    
    <!-- Neutral Colors (Light Theme) -->
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="BackgroundColor">#F3F3F3</Color>
    <Color x:Key="BackgroundAltColor">#FAFAFA</Color>
    <Color x:Key="BorderColor">#E1E1E1</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#000000</Color>
    <Color x:Key="TextSecondaryColor">#605E5C</Color>
    <Color x:Key="TextTertiaryColor">#8A8886</Color>
    <Color x:Key="TextDisabledColor">#C8C6C4</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>
    
    <!-- Status Colors -->
    <Color x:Key="StatusPendingColor">#FFFFFF</Color>
    <Color x:Key="StatusProcessingColor">#FFF8DC</Color>
    <Color x:Key="StatusCompletedColor">#F0FFF0</Color>
    <Color x:Key="StatusErrorColor">#FFF0F0</Color>
    <Color x:Key="StatusCancelledColor">#F8F8F8</Color>
    
    <!-- ============================================ -->
    <!-- BRUSHES                                     -->
    <!-- ============================================ -->
    
    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryPressedColor}"/>
    
    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <!-- Neutral Brushes -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="BackgroundAltBrush" Color="{StaticResource BackgroundAltColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    
    <!-- Status Brushes -->
    <SolidColorBrush x:Key="StatusPendingBrush" Color="{StaticResource StatusPendingColor}"/>
    <SolidColorBrush x:Key="StatusProcessingBrush" Color="{StaticResource StatusProcessingColor}"/>
    <SolidColorBrush x:Key="StatusCompletedBrush" Color="{StaticResource StatusCompletedColor}"/>
    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusErrorColor}"/>
    <SolidColorBrush x:Key="StatusCancelledBrush" Color="{StaticResource StatusCancelledColor}"/>
    
    <!-- ============================================ -->
    <!-- TYPOGRAPHY                                  -->
    <!-- ============================================ -->
    
    <!-- Font Family -->
    <FontFamily x:Key="PrimaryFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas</FontFamily>
    <FontFamily x:Key="IconFontFamily">Segoe Fluent Icons</FontFamily>
    
    <!-- Font Sizes -->
    <system:Double x:Key="FontSizeCaption">11</system:Double>
    <system:Double x:Key="FontSizeSmall">12</system:Double>
    <system:Double x:Key="FontSizeBody">14</system:Double>
    <system:Double x:Key="FontSizeSubtitle">16</system:Double>
    <system:Double x:Key="FontSizeTitle">20</system:Double>
    <system:Double x:Key="FontSizeHeading">24</system:Double>
    <system:Double x:Key="FontSizeDisplay">32</system:Double>
    
    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightLight">Light</FontWeight>
    <FontWeight x:Key="FontWeightRegular">Normal</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
    
    <!-- ============================================ -->
    <!-- SPACING SYSTEM (8px base)                   -->
    <!-- ============================================ -->
    
    <system:Double x:Key="SpaceXS">4</system:Double>
    <system:Double x:Key="SpaceS">8</system:Double>
    <system:Double x:Key="SpaceM">12</system:Double>
    <system:Double x:Key="SpaceL">16</system:Double>
    <system:Double x:Key="SpaceXL">24</system:Double>
    <system:Double x:Key="SpaceXXL">32</system:Double>
    
    <!-- Thickness -->
    <Thickness x:Key="ThicknessXS">4</Thickness>
    <Thickness x:Key="ThicknessS">8</Thickness>
    <Thickness x:Key="ThicknessM">12</Thickness>
    <Thickness x:Key="ThicknessL">16</Thickness>
    <Thickness x:Key="ThicknessXL">24</Thickness>
    <Thickness x:Key="ThicknessXXL">32</Thickness>
    
    <!-- ============================================ -->
    <!-- CORNER RADIUS                               -->
    <!-- ============================================ -->
    
    <CornerRadius x:Key="RadiusXS">2</CornerRadius>
    <CornerRadius x:Key="RadiusS">4</CornerRadius>
    <CornerRadius x:Key="RadiusM">6</CornerRadius>
    <CornerRadius x:Key="RadiusL">8</CornerRadius>
    <CornerRadius x:Key="RadiusXL">12</CornerRadius>
    
    <!-- ============================================ -->
    <!-- ELEVATION (Shadows)                         -->
    <!-- ============================================ -->
    
    <DropShadowEffect x:Key="ShadowDepth1" 
                      Color="#40000000" 
                      Direction="270" 
                      ShadowDepth="1" 
                      BlurRadius="3" 
                      Opacity="0.3"/>
    
    <DropShadowEffect x:Key="ShadowDepth2" 
                      Color="#40000000" 
                      Direction="270" 
                      ShadowDepth="2" 
                      BlurRadius="6" 
                      Opacity="0.3"/>
    
    <DropShadowEffect x:Key="ShadowDepth3" 
                      Color="#40000000" 
                      Direction="270" 
                      ShadowDepth="4" 
                      BlurRadius="12" 
                      Opacity="0.3"/>
    
    <!-- ============================================ -->
    <!-- ICON GLYPHS (Segoe Fluent Icons)           -->
    <!-- ============================================ -->
    
    <!-- File & Media Icons -->
    <system:String x:Key="IconVideo">&#xE714;</system:String>
    <system:String x:Key="IconFolder">&#xE8B7;</system:String>
    <system:String x:Key="IconDocument">&#xE8A5;</system:String>
    <system:String x:Key="IconSubtitles">&#xE7F0;</system:String>
    
    <!-- Action Icons -->
    <system:String x:Key="IconPlay">&#xE768;</system:String>
    <system:String x:Key="IconStop">&#xE71A;</system:String>
    <system:String x:Key="IconRefresh">&#xE72C;</system:String>
    <system:String x:Key="IconSettings">&#xE713;</system:String>
    <system:String x:Key="IconDelete">&#xE74D;</system:String>
    <system:String x:Key="IconAdd">&#xE710;</system:String>
    <system:String x:Key="IconRemove">&#xE738;</system:String>
    
    <!-- Status Icons -->
    <system:String x:Key="IconCheckmark">&#xE73E;</system:String>
    <system:String x:Key="IconError">&#xE783;</system:String>
    <system:String x:Key="IconWarning">&#xE7BA;</system:String>
    <system:String x:Key="IconInfo">&#xE946;</system:String>
    <system:String x:Key="IconPending">&#xE81C;</system:String>
    
    <!-- Navigation Icons -->
    <system:String x:Key="IconChevronUp">&#xE70E;</system:String>
    <system:String x:Key="IconChevronDown">&#xE70D;</system:String>
    <system:String x:Key="IconChevronLeft">&#xE76B;</system:String>
    <system:String x:Key="IconChevronRight">&#xE76C;</system:String>
    
    <!-- Utility Icons -->
    <system:String x:Key="IconCopy">&#xE8C8;</system:String>
    <system:String x:Key="IconSave">&#xE74E;</system:String>
    <system:String x:Key="IconOpen">&#xE8E5;</system:String>
    <system:String x:Key="IconClose">&#xE711;</system:String>
    <system:String x:Key="IconHelp">&#xE897;</system:String>
    <system:String x:Key="IconSearch">&#xE721;</system:String>
    
    <!-- ============================================ -->
    <!-- ANIMATION DURATIONS                         -->
    <!-- ============================================ -->
    
    <Duration x:Key="AnimationDurationFast">0:0:0.15</Duration>
    <Duration x:Key="AnimationDurationNormal">0:0:0.25</Duration>
    <Duration x:Key="AnimationDurationSlow">0:0:0.35</Duration>

</ResourceDictionary>

