<Window x:Class="SrtExtractor.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SrtExtractor.Views"
        xmlns:converters="clr-namespace:SrtExtractor.Converters"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Icon="pack://application:,,,/SrtExtractor.ico"
        Title="Settings - SrtExtractor" 
        Height="600" Width="700"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="{StaticResource ThicknessXS}"/>
            <Setter Property="Padding" Value="{StaticResource ThicknessS}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="SrtExtractor Settings" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <TabControl Grid.Row="1">
            <!-- Preferences Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                   Text="&#xE115;" 
                                   FontSize="14" 
                                   Margin="0,0,6,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Preferences" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Subtitle Extraction Preferences" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        
                        <!-- Subtitle Preference -->
                        <GroupBox Header="Subtitle Type Preference" Margin="0,0,0,15">
                            <StackPanel>
                                <RadioButton Content="Prefer forced subtitles (usually foreign dialogue)" 
                                             IsChecked="{Binding State.PreferForced}"
                                             GroupName="SubtitlePreference"
                                             Margin="0,5"/>
                                <RadioButton Content="Prefer closed captions (CC)" 
                                             IsChecked="{Binding State.PreferClosedCaptions}"
                                             GroupName="SubtitlePreference"
                                             Margin="0,5"/>
                                <TextBlock Text="Choose which type of subtitles to prioritize when multiple options are available." 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- OCR Language -->
                        <GroupBox Header="OCR Language" Margin="0,0,0,15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Language:" FontWeight="Bold" Width="80"/>
                                    <TextBox Text="{Binding State.OcrLanguage}" 
                                             Width="100" 
                                             Margin="4,0"/>
                                </StackPanel>
                                <TextBlock Text="Language code for OCR processing (e.g., 'eng' for English, 'spa' for Spanish)" 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- SRT Correction -->
                        <GroupBox Header="SRT Correction" Margin="0,0,0,15">
                            <StackPanel>
                                <CheckBox Content="Enable SRT correction (recommended)" 
                                          IsChecked="{Binding State.EnableSrtCorrection}"
                                          FontWeight="Bold"
                                          Margin="0,5"/>
                                <TextBlock Text="Automatically corrects common OCR errors in extracted subtitles. Disable to get raw OCR output without any corrections." 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,5,0,5"/>
                                <Border Background="{StaticResource BackgroundAltBrush}" 
                                        BorderBrush="{StaticResource WarningBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="{StaticResource RadiusS}" 
                                        Padding="{StaticResource ThicknessS}" 
                                        Margin="0,5,0,0"
                                        Visibility="{Binding State.EnableSrtCorrection, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                                   Text="{StaticResource IconWarning}" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource WarningBrush}"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Correction is disabled. You will receive raw OCR output with potential errors." 
                                                   FontSize="{StaticResource FontSizeCaption}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>

                        <!-- Multi-Pass Correction -->
                        <GroupBox Header="Multi-Pass Correction" Margin="0,0,0,15"
                                  IsEnabled="{Binding State.EnableSrtCorrection}">
                            <StackPanel>
                                <CheckBox Content="Enable multi-pass correction (recommended)" 
                                          IsChecked="{Binding State.EnableMultiPassCorrection}"
                                          FontWeight="Bold"
                                          Margin="0,5"/>
                                <TextBlock Text="Performs multiple correction passes to catch different OCR errors that may be missed in a single pass." 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,5,0,10"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Mode:" FontWeight="Bold" Width="80"/>
                                    <ComboBox SelectedItem="{Binding State.CorrectionMode}" 
                                              ItemsSource="{Binding State.AvailableCorrectionModes}"
                                              Width="120" 
                                              Margin="4,0"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Max Passes:" FontWeight="Bold" Width="80"/>
                                    <TextBox Text="{Binding State.MaxCorrectionPasses}" 
                                             Width="60" 
                                             Margin="4,0"/>
                                </StackPanel>
                                
                                <CheckBox Content="Use smart convergence (stop when no more changes detected)" 
                                          IsChecked="{Binding State.UseSmartConvergence}"
                                          Margin="0,5"/>
                                
                                <Border Background="{StaticResource BackgroundAltBrush}" 
                                        BorderBrush="{StaticResource PrimaryBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="{StaticResource RadiusS}" 
                                        Padding="{StaticResource ThicknessS}" 
                                        Margin="0,10,0,0">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                                       Text="{StaticResource IconInfo}" 
                                                       FontSize="14" 
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="Correction Modes:" 
                                                       FontWeight="{StaticResource FontWeightSemiBold}" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="• Quick: 1 pass (fastest)" 
                                                   FontSize="{StaticResource FontSizeCaption}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2,0,0"/>
                                        <TextBlock Text="• Standard: 3 passes with smart convergence (recommended)" 
                                                   FontSize="{StaticResource FontSizeCaption}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2,0,0"/>
                                        <TextBlock Text="• Thorough: 5 passes without convergence (best quality)" 
                                                   FontSize="{StaticResource FontSizeCaption}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>

                        <!-- File Naming Pattern -->
                        <GroupBox Header="Output File Naming" Margin="0,0,0,15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Pattern:" FontWeight="Bold" Width="80"/>
                                    <TextBox Text="{Binding State.FileNamePattern}" 
                                             MinWidth="300" 
                                             Margin="4,0"/>
                                </StackPanel>
                                <TextBlock Text="Available variables: {basename}, {lang}, {forced}, {cc}" 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,5,0,0"/>
                                <TextBlock Text="Example: Movie.eng.forced.srt" 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Advanced Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                   Text="&#xE90F;" 
                                   FontSize="14" 
                                   Margin="0,0,6,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Advanced" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Advanced Settings" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        
                        <!-- Batch Mode Note -->
                        <GroupBox Header="Batch Processing" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock TextWrapping="Wrap" 
                                           Margin="0,5">
                                    <Run Text="Use the " FontWeight="Normal"/>
                                    <Run Text="Batch tab" FontWeight="SemiBold" Foreground="{StaticResource PrimaryBrush}"/>
                                    <Run Text=" to process multiple files simultaneously with drag &amp; drop support." FontWeight="Normal"/>
                                </TextBlock>
                                <TextBlock Text="Simply switch to the Batch tab (Ctrl+B) to access batch processing features." 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,10,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Debugging -->
                        <GroupBox Header="Debugging Options" Margin="0,0,0,15">
                            <StackPanel>
                                <CheckBox Content="Preserve SUP files for debugging" 
                                          IsChecked="{Binding State.PreserveSupFiles}"
                                          FontWeight="Bold"
                                          Margin="0,5"/>
                                <TextBlock Text="Keep extracted SUP (PGS subtitle) files instead of deleting them after OCR. Useful for debugging OCR quality issues and testing different OCR configurations." 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,5,0,5"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="SUP files are saved next to the output SRT file with the same name." 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,0,0,5"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Logging -->
                        <GroupBox Header="Logging" Margin="0,0,0,15">
                            <StackPanel>
                                <Button Content="Clear Application Log" 
                                        Click="ClearLog_Click"
                                        Style="{StaticResource SecondaryButton}" 
                                        HorizontalAlignment="Left"/>
                                <TextBlock Text="Clear the application log window." 
                                           FontStyle="Italic" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Bottom Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" 
                    Click="OkButton_Click"
                    Style="{StaticResource PrimaryButton}"
                    Padding="20,8"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButton}"
                    Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
