    <Window x:Class="SrtExtractor.Views.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:SrtExtractor.Views"
            xmlns:converters="clr-namespace:SrtExtractor.Converters"
            xmlns:ui="http://schemas.modernwpf.com/2019"
            mc:Ignorable="d"
            ui:WindowHelper.UseModernWindowStyle="True"
            Icon="pack://application:,,,/SrtExtractor.ico"
            Title="{Binding State.WindowTitle}"
            Height="700" Width="1100"
            MinHeight="600" MinWidth="900"
            AllowDrop="True"
            DragEnter="Window_DragEnter"
            DragLeave="Window_DragLeave"
            DragOver="Window_DragOver"
            Drop="Window_Drop">
    
    <!-- Keyboard Shortcuts -->
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding PickMkvCommand}"/>
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding ProbeCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ExtractCommand}"/>
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{Binding ToggleBatchModeCommand}"/>
        <KeyBinding Key="C" Modifiers="Ctrl" Command="{Binding CancelCommand}"/>
        <KeyBinding Key="F5" Command="{Binding ReDetectToolsCommand}"/>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
    </Window.InputBindings>
    
    <Window.Resources>
        <!-- DataGrid Selection Style -->
        <Style TargetType="DataGridRow">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
                    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundAltBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- DataGrid Column Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource BackgroundAltBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        
        <!-- DataGrid Cell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="{StaticResource ThicknessXS}"/>
            <Setter Property="Padding" Value="{StaticResource ThicknessS}"/>
        </Style>
        
        <!-- ListBox Style for Batch Queue -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- ListBoxItem Style for Batch Queue -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BackgroundAltBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Grid>
        <!-- Main Content -->
        <DockPanel>
            <!-- Menu Bar -->
            <Menu DockPanel.Dock="Top">
        <MenuItem Header="_File">
            <MenuItem Header="_Open Video File..." 
                      Command="{Binding PickMkvCommand}"
                      InputGestureText="Ctrl+O"
                      ToolTip="Select a video file to extract subtitles from"/>
            <Separator/>
            <MenuItem Header="_Recent Files"
                      Name="RecentFilesMenuItem"
                      ToolTip="Quick access to recently processed video files">
                <MenuItem Header="No recent files"
                          Name="NoRecentFilesMenuItem"
                          IsEnabled="False"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="E_xit" 
                      Click="ExitMenuItem_Click"
                      InputGestureText="Alt+F4"
                      ToolTip="Close the application"/>
        </MenuItem>
        
        <MenuItem Header="_Edit">
            <MenuItem Header="_Cancel Operation" 
                      Command="{Binding CancelCommand}"
                      InputGestureText="Ctrl+C"
                      ToolTip="Cancel the current operation"/>
        </MenuItem>
        
        <MenuItem Header="_Tools">
            <MenuItem Header="_Probe Tracks" 
                      Command="{Binding ProbeCommand}"
                      InputGestureText="Ctrl+P"
                      ToolTip="Analyze the video file to find available subtitle tracks"/>
            <MenuItem Header="_Extract Subtitles" 
                      Command="{Binding ExtractCommand}"
                      InputGestureText="Ctrl+E"
                      ToolTip="Extract the selected subtitle track to SRT format"/>
            <Separator/>
            <MenuItem Header="Re-_detect Tools" 
                      Command="{Binding ReDetectToolsCommand}"
                      InputGestureText="F5"
                      ToolTip="Re-detect and verify external tools (MKVToolNix, FFmpeg, etc.)"/>
            <Separator/>
            <MenuItem Header="_SRT Correction" 
                      Click="SrtCorrection_Click"
                      ToolTip="Correct OCR errors in SRT files (single file or batch)"/>
            <MenuItem Header="_VobSub Track Analyzer..." 
                      Click="VobSubTrackAnalyzer_Click"
                      ToolTip="Analyze VobSub (image-based) subtitle tracks for batch processing in Subtitle Edit"/>
            <Separator/>
            <MenuItem Header="Show _Welcome Screen (Debug)" 
                      Click="ShowWelcome_Click"
                      ToolTip="Display the first-run welcome screen (for testing)">
                <MenuItem.Icon>
                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                               Text="👋" 
                               FontSize="14"/>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
        
        <MenuItem Header="_Options">
            <MenuItem Header="_Toggle Batch Mode" 
                      IsCheckable="True"
                      IsChecked="{Binding State.IsBatchMode}"
                      InputGestureText="Ctrl+B"
                      ToolTip="Enable batch processing mode for multiple files"/>
            <Separator/>
            <MenuItem Header="_Subtitle Preferences"
                      ToolTip="Configure subtitle selection preferences">
                <MenuItem Header="_Prefer Forced Subtitles" 
                          IsCheckable="True"
                          IsChecked="{Binding State.PreferForced}"
                          Click="PreferForcedMenuItem_Click"
                          ToolTip="Prioritize forced subtitles (usually foreign dialogue)"/>
                <MenuItem Header="Prefer _Closed Captions" 
                          IsCheckable="True"
                          IsChecked="{Binding State.PreferClosedCaptions}"
                          Click="PreferClosedCaptionsMenuItem_Click"
                          ToolTip="Prioritize closed caption subtitles (usually full dialogue)"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="_Settings..." 
                      Click="SettingsMenuItem_Click"
                      ToolTip="Open application settings and preferences"/>
        </MenuItem>
        
        <MenuItem Header="_Help">
            <MenuItem Header="_Keyboard Shortcuts" 
                      Click="KeyboardShortcuts_Click"
                      ToolTip="View all available keyboard shortcuts"/>
            <MenuItem Header="_User Guide" 
                      Click="UserGuide_Click"
                      ToolTip="Open the user guide and documentation"/>
            <Separator/>
            <MenuItem Header="_About SrtExtractor..." 
                      Click="AboutMenuItem_Click"
                      ToolTip="Show application information and version"/>
        </MenuItem>
    </Menu>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="{Binding State.QueueColumnWidth}" x:Name="QueueColumn" MinWidth="0"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        <!-- File Selection Row -->
        <GroupBox Header="Video File" Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel>
                <!-- Settings Summary -->
                <TextBlock Text="{Binding State.SettingsSummary}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="{StaticResource FontSizeSmall}"
                           Margin="0,0,0,8"
                           HorizontalAlignment="Center"
                           ToolTip="Current extraction settings&#x0a;Click the Settings button to modify these preferences"/>
                
                <!-- File Selection -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="Pick Video..." 
                            Command="{Binding PickMkvCommand}"
                            IsEnabled="{Binding State.IsBusy, Converter={StaticResource InverseBoolConverter}}"
                            ToolTip="Select a video file (MKV or MP4) to extract subtitles from&#x0a;Keyboard Shortcut: Ctrl+O"/>
                    <TextBox Text="{Binding State.MkvPath}" 
                             IsReadOnly="True" 
                             Margin="4,0"
                             VerticalAlignment="Center"
                             MinWidth="300"
                             ToolTip="Path to the selected video file&#x0a;Right-click for more options (copy path, open location, etc.)">
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Copy File Path" 
                                      Click="CopyFilePath_Click"
                                      ToolTip="Copy the full file path to clipboard">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconCopy}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Copy File Name" 
                                      Click="CopyFileName_Click"
                                      ToolTip="Copy just the file name to clipboard">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconDocument}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Open File Location" 
                                      Click="OpenFileLocation_Click"
                                      ToolTip="Open the folder containing this file">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconFolder}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Show File Properties" 
                                      Click="ShowFileProperties_Click"
                                      ToolTip="View detailed properties of this file">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconInfo}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Change Video File..." 
                                      Command="{Binding PickMkvCommand}"
                                      ToolTip="Select a different video file (Ctrl+O)">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconVideo}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Settings Row -->
        <GroupBox Header="Settings" Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <!-- Batch Mode Checkbox -->
                <CheckBox IsChecked="{Binding State.IsBatchMode}"
                          VerticalAlignment="Center"
                          FontWeight="{StaticResource FontWeightSemiBold}"
                          Margin="0,5"
                          ToolTip="Enable batch mode to process multiple video files at once&#x0a;Drag and drop files anywhere on this window&#x0a;Keyboard Shortcut: Ctrl+B">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                   Text="{StaticResource IconVideo}" 
                                   FontSize="16" 
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Enable Batch Mode (Process Multiple Files)" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </CheckBox>
                
                <!-- Subtitle Preference Radio Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <RadioButton Content="Prefer forced subtitles" 
                                 IsChecked="{Binding State.PreferForced}"
                                 GroupName="SubtitlePreference"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 ToolTip="Prioritize forced subtitles when multiple tracks are available&#x0a;Forced subtitles typically contain only foreign dialogue or on-screen text&#x0a;Best for movies with occasional non-English dialogue"/>
                    <RadioButton Content="Prefer CC (Closed Captions)" 
                                 IsChecked="{Binding State.PreferClosedCaptions}"
                                 GroupName="SubtitlePreference"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 ToolTip="Prioritize closed captions when multiple tracks are available&#x0a;CCs typically include all dialogue and sound effects descriptions&#x0a;Best for accessibility or when you want complete transcription"/>
                </StackPanel>
                
                <!-- Batch Mode Instructions -->
                <Border Background="{StaticResource BackgroundAltBrush}" 
                        BorderBrush="{StaticResource PrimaryBrush}" 
                        BorderThickness="1" 
                        CornerRadius="{StaticResource RadiusM}" 
                        Padding="{StaticResource ThicknessM}" 
                        Margin="0,10,0,0"
                        Visibility="{Binding State.IsBatchMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                       Text="{StaticResource IconInfo}" 
                                       FontSize="16" 
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="How to use Batch Mode:" 
                                       FontWeight="{StaticResource FontWeightSemiBold}" 
                                       FontSize="{StaticResource FontSizeSmall}" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                        <TextBlock FontSize="{StaticResource FontSizeCaption}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,2,0,0">
                            <Run Text="1. Enable Batch Mode above"/>
                        </TextBlock>
                        <TextBlock FontSize="{StaticResource FontSizeCaption}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,2,0,0">
                            <Run Text="2. Drag &amp; drop MKV/MP4 files anywhere on this window"/>
                        </TextBlock>
                        <TextBlock FontSize="{StaticResource FontSizeCaption}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,2,0,0">
                            <Run Text="3. Click 'Process Batch' to extract subtitles from all files"/>
                        </TextBlock>
                        <TextBlock FontSize="{StaticResource FontSizeCaption}" 
                                   FontStyle="Italic" 
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="All files will use your preferred settings: {0} subtitles, {1} language">
                                    <Binding Path="State.PreferForced" Converter="{StaticResource BoolToPreferenceConverter}"/>
                                    <Binding Path="State.OcrLanguage"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="OCR Language:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox SelectedItem="{Binding State.OcrLanguage}" 
                              ItemsSource="{Binding State.AvailableLanguages}"
                              Width="80"
                              Margin="0,0,20,0"
                              ToolTip="Language for OCR text recognition when extracting image-based subtitles (PGS format)&#x0a;Only used when converting images to text&#x0a;Common: eng (English), spa (Spanish), fra (French)"/>
                    <TextBlock Text="File Pattern:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox Text="{Binding State.FileNamePattern}" 
                             Width="200"
                             ToolTip="Output filename pattern for extracted subtitles&#x0a;Available variables:&#x0a;  {basename} - Video filename without extension&#x0a;  {lang} - Subtitle language code&#x0a;  {forced} - Adds '.forced' if applicable&#x0a;  {cc} - Adds '.cc' if applicable&#x0a;Example: Movie.eng.forced.srt"/>
                </StackPanel>

                <!-- Network Warning -->
                <Border Background="{StaticResource BackgroundAltBrush}" 
                        BorderBrush="{StaticResource WarningBrush}" 
                        BorderThickness="1" 
                        CornerRadius="{StaticResource RadiusS}" 
                        Padding="{StaticResource ThicknessS}" 
                        Margin="0,10,0,0"
                        Visibility="{Binding State.ShowNetworkWarning, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                       Text="{StaticResource IconWarning}" 
                                       FontSize="16" 
                                       Foreground="{StaticResource WarningBrush}"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Network File Detected" 
                                       FontWeight="{StaticResource FontWeightSemiBold}" 
                                       Foreground="{StaticResource WarningBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding State.NetworkWarningMessage}" 
                                   TextWrapping="Wrap" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="24,0,0,0"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <GroupBox Header="Actions" Grid.Row="1" Grid.Column="0">
            <StackPanel>
                <!-- Single File Mode Actions -->
                <StackPanel Orientation="Horizontal" 
                            Visibility="{Binding State.ShowSingleFileMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Content="Probe Tracks" 
                            Command="{Binding ProbeCommand}"
                            IsEnabled="{Binding State.CanProbe}"
                            Style="{StaticResource SecondaryButton}"
                            Height="38"
                            Padding="16,8"
                            FontSize="14"
                            Margin="0,0,12,0"
                            ToolTip="Analyze the video file and discover all available subtitle tracks&#x0a;Shows format, language, and type for each track&#x0a;Automatically recommends the best track for extraction&#x0a;Keyboard Shortcut: Ctrl+P"/>
                    <Button Command="{Binding ExtractCommand}"
                            IsEnabled="{Binding State.CanExtract}"
                            Style="{StaticResource PrimaryButton}"
                            Height="52"
                            MinWidth="220"
                            FontSize="16"
                            FontWeight="{StaticResource FontWeightSemiBold}"
                            Padding="20,12"
                            ToolTip="Extract the selected subtitle track and convert to SRT format&#x0a;Text subtitles are extracted instantly&#x0a;Image subtitles (PGS) require OCR processing (slower)&#x0a;Multi-pass correction is automatically applied&#x0a;Keyboard Shortcut: Ctrl+E">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                       Text="{StaticResource IconSubtitles}" 
                                       FontSize="20" 
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Extract to SRT" 
                                       VerticalAlignment="Center"
                                       FontSize="16"/>
                        </StackPanel>
                    </Button>
                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            IsEnabled="{Binding State.IsProcessing}"
                            Style="{StaticResource WarningButton}"
                            Height="38"
                            Padding="16,8"
                            FontSize="14"
                            Visibility="{Binding State.IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                            ToolTip="Cancel the current extraction operation&#x0a;Temporary files will be cleaned up automatically&#x0a;Keyboard Shortcut: Ctrl+C or Esc"/>
                </StackPanel>
                
                <!-- Batch Mode Actions -->
                <StackPanel Orientation="Horizontal" 
                            Visibility="{Binding State.ShowBatchMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Command="{Binding ProcessBatchCommand}"
                            IsEnabled="{Binding State.HasBatchQueue}"
                            Style="{StaticResource SuccessButton}"
                            FontSize="{StaticResource FontSizeSubtitle}"
                            Padding="{StaticResource ThicknessL}"
                            Margin="0,0,10,0"
                            ToolTip="Process all files in the batch queue&#x0a;Uses your current subtitle preferences and OCR settings&#x0a;Each file is analyzed and best track is selected automatically&#x0a;Progress is displayed in real-time with status updates">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                       Text="{StaticResource IconPlay}" 
                                       FontSize="16" 
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Process Batch" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Content="Cancel Batch" 
                            Command="{Binding CancelCommand}"
                            IsEnabled="{Binding State.IsProcessing}"
                            Style="{StaticResource WarningButton}"
                            Padding="{StaticResource ThicknessL}"
                            Visibility="{Binding State.IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                            ToolTip="Cancel the current batch processing operation&#x0a;Files already completed will remain processed&#x0a;Current file being processed will stop gracefully&#x0a;Keyboard Shortcut: Ctrl+C or Esc"/>
                </StackPanel>
                
                <!-- Common Actions -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Clear Log" 
                            Click="ClearLog_Click"
                            Style="{StaticResource SecondaryButton}"
                            ToolTip="Clear the log display window&#x0a;Log history is preserved in the file log&#x0a;Location: C:\ProgramData\ZentrixLabs\SrtExtractor\Logs\"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Processing Indicator -->
        <GroupBox Header="Processing" Grid.Row="2" Grid.Column="1" Visibility="{Binding State.IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                    <ProgressBar IsIndeterminate="True" 
                                Width="200" 
                                Height="20" 
                                Margin="0,0,10,0"/>
                    <TextBlock Text="Processing..." 
                               FontWeight="{StaticResource FontWeightSemiBold}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="{Binding State.ProcessingMessage}" 
                           FontWeight="{StaticResource FontWeightSemiBold}" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="400"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <!-- Track List -->
        <GroupBox Header="Subtitle Tracks" Grid.Row="3" Grid.ColumnSpan="2"
                  Visibility="{Binding State.ShowSingleFileMode, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <!-- No Tracks Message -->
                <Border Background="{StaticResource BackgroundAltBrush}" 
                        BorderBrush="{StaticResource WarningBrush}" 
                        BorderThickness="1" 
                        CornerRadius="{StaticResource RadiusM}" 
                        Padding="{StaticResource ThicknessL}" 
                        Margin="{StaticResource ThicknessS}"
                        Visibility="{Binding State.ShowNoTracksError, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                       Text="{StaticResource IconWarning}" 
                                       FontSize="20" 
                                       Foreground="{StaticResource WarningBrush}"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="No Subtitle Tracks Found" 
                                       FontSize="{StaticResource FontSizeSubtitle}" 
                                       FontWeight="{StaticResource FontWeightSemiBold}" 
                                       Foreground="{StaticResource WarningBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="This video file does not contain any subtitle tracks." 
                                   FontSize="{StaticResource FontSizeBody}" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Try selecting a different video file or check if the file has embedded subtitles." 
                                   FontSize="{StaticResource FontSizeSmall}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
                <!-- Tracks DataGrid -->
                <DataGrid ItemsSource="{Binding State.Tracks}" 
                          SelectedItem="{Binding State.SelectedTrack}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          MinHeight="120"
                          MaxHeight="300"
                          Background="{StaticResource BackgroundAltBrush}"
                          Foreground="{DynamicResource TextPrimaryBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          Visibility="{Binding State.ShowNoTracksError, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                          ToolTip="Click to select a subtitle track for extraction&#x0a;⭐ Recommended tracks are automatically identified based on your preferences&#x0a;Right-click for additional options">
                <DataGrid.RowBackground>
                    <SolidColorBrush Color="White"/>
                </DataGrid.RowBackground>
                <DataGrid.AlternatingRowBackground>
                    <SolidColorBrush Color="#F8F8F8"/>
                </DataGrid.AlternatingRowBackground>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Select Track" 
                                  Command="{Binding ExtractCommand}"
                                  IsEnabled="{Binding State.CanExtract}"
                                  ToolTip="Extract this subtitle track to SRT format (Ctrl+E)">
                            <MenuItem.Icon>
                                <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                           Text="{StaticResource IconSubtitles}" 
                                           FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Show Track Details" 
                                  Click="ShowTrackDetails_Click"
                                  ToolTip="View detailed information about this subtitle track">
                            <MenuItem.Icon>
                                <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                           Text="{StaticResource IconInfo}" 
                                           FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Copy Track Info" 
                                  Click="CopyTrackInfo_Click"
                                  ToolTip="Copy track information to clipboard">
                            <MenuItem.Icon>
                                <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                           Text="{StaticResource IconCopy}" 
                                           FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Refresh Tracks" 
                                  Command="{Binding ProbeCommand}"
                                  IsEnabled="{Binding State.CanProbe}"
                                  ToolTip="Re-analyze the video file for subtitle tracks (Ctrl+P)">
                            <MenuItem.Icon>
                                <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                           Text="{StaticResource IconRefresh}" 
                                           FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="40">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Track ID number from the video file"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Codec" 
                                        Binding="{Binding Codec}" 
                                        Width="120">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Subtitle format (SRT, ASS, VOBSUB, etc.)"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Language" 
                                        Binding="{Binding Language}" 
                                        Width="80">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Subtitle language code (en, es, fr, etc.)"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Type" 
                                        Binding="{Binding TrackType}" 
                                        Width="80">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Subtitle track type (subtitles, captions, etc.)"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridCheckBoxColumn Header="Forced" 
                                            Binding="{Binding Forced}" 
                                            Width="60">
                        <DataGridCheckBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Indicates if this is a forced subtitle track"/>
                            </Style>
                        </DataGridCheckBoxColumn.HeaderStyle>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn Header="Recommended" 
                                        Binding="{Binding IsRecommended}" 
                                        Width="100">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Shows if this track matches your preferences"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="⭐ Recommended"/>
                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRecommended}" Value="False">
                                        <Setter Property="Text" Value=""/>
                                        <Setter Property="Foreground" Value="Transparent"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Bitrate" 
                                        Binding="{Binding Bitrate, StringFormat='{}{0:N0} bps'}" 
                                        Width="100">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Data rate in bits per second"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Frames" 
                                        Binding="{Binding FrameCount}" 
                                        Width="70">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Number of subtitle frames/segments"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Duration" 
                                        Binding="{Binding Duration, Converter={StaticResource DurationConverter}}" 
                                        Width="100">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Total duration of the subtitle track"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Name" 
                                        Binding="{Binding Name}" 
                                        Width="*">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="ToolTip" Value="Custom name or title of the subtitle track"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Log Display -->
        <Expander Grid.Row="4" Grid.ColumnSpan="2" 
                  IsExpanded="False"
                  BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="1"
                  Background="{StaticResource BackgroundBrush}"
                  Padding="0">
            <Expander.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                               Text="{StaticResource IconDocument}" 
                               FontSize="14" 
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Log" 
                               FontWeight="{StaticResource FontWeightSemiBold}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" (click to expand)" 
                               FontSize="{StaticResource FontSizeCaption}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontStyle="Italic"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Expander.Header>
            <Grid Margin="{StaticResource ThicknessS}">
                <TextBox Text="{Binding State.LogText}" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                           Background="{DynamicResource LogBackgroundBrush}"
                           Foreground="{DynamicResource LogForegroundBrush}"
                         FontFamily="{StaticResource MonospaceFontFamily}"
                         FontSize="{StaticResource FontSizeCaption}"
                         MinHeight="150"
                         ToolTip="Real-time operation log showing all activities&#x0a;Right-click for options: Copy, Save, Open log folder&#x0a;Full logs saved to: C:\ProgramData\ZentrixLabs\SrtExtractor\Logs\">
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Copy All" 
                                      Click="CopyLogText_Click"
                                      ToolTip="Copy all log text to clipboard">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconCopy}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Copy Selection" 
                                      Click="CopyLogSelection_Click"
                                      ToolTip="Copy selected text to clipboard">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconCopy}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Clear Log" 
                                      Click="ClearLog_Click"
                                      ToolTip="Clear the log display">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconDelete}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Save Log to File" 
                                      Click="SaveLogToFile_Click"
                                      ToolTip="Save log content to a text file">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconSave}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Open Log Folder" 
                                      Click="OpenLogFolder_Click"
                                      ToolTip="Open the folder containing log files">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                               Text="{StaticResource IconFolder}" 
                                               FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>
            </Grid>
        </Expander>

        </Grid>

        <!-- Queue Panel -->
        <GroupBox Grid.Column="1" 
                  Visibility="{Binding State.QueueColumnWidth, Converter={StaticResource DoubleToVisibilityConverter}}"
                  Background="{StaticResource BackgroundAltBrush}"
                  BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="1">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                               Text="{StaticResource IconVideo}" 
                               FontSize="16" 
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Batch Queue" VerticalAlignment="Center"/>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Queue Instructions -->
                <Border Grid.Row="0" 
                        Background="{StaticResource BackgroundBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="{StaticResource RadiusM}" 
                        Padding="{StaticResource ThicknessM}" 
                        Margin="0,0,0,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                       Text="{StaticResource IconFolder}" 
                                       FontSize="16" 
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Drag &amp; drop video files here" 
                                       FontWeight="{StaticResource FontWeightSemiBold}" 
                                       FontSize="{StaticResource FontSizeSmall}" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Supports: MKV, MP4" 
                                   FontSize="{StaticResource FontSizeCaption}" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   Margin="0,4,0,0" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Queue Header -->
                <Grid Grid.Row="1" Margin="0,0,0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Queue Count and Statistics -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                        <TextBlock Text="Files in Queue:" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding State.BatchQueue.Count, StringFormat='{}{0}'}" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,12,0"/>
                        
                        <!-- Batch Statistics -->
                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                   Text="{StaticResource IconCheckmark}" 
                                   Foreground="{StaticResource SuccessBrush}"
                                   FontSize="12"
                                   VerticalAlignment="Center" 
                                   Margin="0,0,2,0"/>
                        <TextBlock Text="{Binding State.BatchCompletedCount}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"
                                   FontSize="11"
                                   ToolTip="Completed files"/>
                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                   Text="{StaticResource IconError}" 
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontSize="12"
                                   VerticalAlignment="Center" 
                                   Margin="0,0,2,0"/>
                        <TextBlock Text="{Binding State.BatchErrorCount}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"
                                   FontSize="11"
                                   ToolTip="Failed files"/>
                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                   Text="{StaticResource IconPending}" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="12"
                                   VerticalAlignment="Center" 
                                   Margin="0,0,2,0"/>
                        <TextBlock Text="{Binding State.BatchPendingCount}" 
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   ToolTip="Pending files"/>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="Resume Batch" 
                                Command="{Binding ResumeBatchCommand}"
                                Style="{StaticResource AccentButton}"
                                Margin="0,0,4,0"
                                Padding="3,1"
                                FontSize="10"
                                MinWidth="0"
                                Height="20"
                                Visibility="{Binding State.ShowResumeBatchButton, Converter={StaticResource BoolToVisibilityConverter}}"
                                ToolTip="Resume batch processing from where it was interrupted&#x0a;Skips already completed files and continues with remaining files"/>
                        <Button Content="Clear Completed" 
                                Command="{Binding ClearCompletedBatchItemsCommand}"
                                Style="{StaticResource SuccessButton}"
                                Margin="0,0,4,0"
                                Padding="3,1"
                                FontSize="10"
                                MinWidth="0"
                                Height="20"
                                ToolTip="Remove only completed files from the queue&#x0a;Keeps pending and failed files for re-processing"/>
                        <Button Content="Clear All" 
                                Command="{Binding ClearBatchQueueCommand}"
                                Style="{StaticResource DangerButton}"
                                Padding="3,1"
                                FontSize="10"
                                MinWidth="0"
                                Height="20"
                                Visibility="{Binding State.HasBatchQueue, Converter={StaticResource BoolToVisibilityConverter}}"
                                ToolTip="Remove all files from the batch queue&#x0a;This will clear completed, pending, and failed files"/>
                    </StackPanel>
                </Grid>
                
                <!-- Queue List -->
                <Grid Grid.Row="2">
                    <ListBox ItemsSource="{Binding State.BatchQueue}"
                             Background="{DynamicResource BackgroundBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             AllowDrop="False"
                             PreviewMouseLeftButtonDown="BatchQueueListBox_PreviewMouseLeftButtonDown"
                             PreviewMouseMove="BatchQueueListBox_PreviewMouseMove"
                             PreviewMouseLeftButtonUp="BatchQueueListBox_PreviewMouseLeftButtonUp"
                             ToolTip="Batch processing queue&#x0a;Drag files from Windows Explorer to add them&#x0a;Right-click files for more options&#x0a;Click and drag to reorder files in the queue">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Process This File" 
                                          Command="{Binding DataContext.ProcessSingleBatchFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          ToolTip="Process only this file from the batch queue">
                                    <MenuItem.Icon>
                                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                                   Text="{StaticResource IconPlay}" 
                                                   FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Remove from Queue" 
                                          Command="{Binding DataContext.RemoveFromBatchCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          ToolTip="Remove this file from the batch queue">
                                    <MenuItem.Icon>
                                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                                   Text="{StaticResource IconRemove}" 
                                                   FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Move to Top" 
                                          Click="MoveBatchItemToTop_Click"
                                          ToolTip="Move this file to the top of the queue">
                                    <MenuItem.Icon>
                                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                                   Text="{StaticResource IconChevronUp}" 
                                                   FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Move to Bottom" 
                                          Click="MoveBatchItemToBottom_Click"
                                          ToolTip="Move this file to the bottom of the queue">
                                    <MenuItem.Icon>
                                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                                   Text="{StaticResource IconChevronDown}" 
                                                   FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Open File Location" 
                                          Click="OpenBatchFileLocation_Click"
                                          ToolTip="Open the folder containing this file">
                                    <MenuItem.Icon>
                                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                                   Text="{StaticResource IconFolder}" 
                                                   FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Show File Properties" 
                                          Click="ShowBatchFileProperties_Click"
                                          ToolTip="View detailed properties of this file">
                                    <MenuItem.Icon>
                                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                                   Text="{StaticResource IconInfo}" 
                                                   FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="{StaticResource RadiusM}" Margin="2" Padding="8">
                                    <Border.Background>
                                        <Binding Path="Status" Converter="{StaticResource StatusToBackgroundConverter}"/>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Status Indicator -->
                                        <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0">
                                            <TextBlock.Text>
                                                <Binding Path="Status" Converter="{StaticResource StatusToIconConverter}"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        
                                        <!-- File Info -->
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   Text="{Binding FileName}" 
                                                   FontWeight="Bold" 
                                                   TextWrapping="Wrap"
                                                   MaxWidth="180"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   Text="{Binding FormattedFileSize}" 
                                                   FontSize="10" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2,0,0"/>
                                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding NetworkIndicator}" FontSize="12"/>
                                            <TextBlock Text="{Binding FormattedEstimatedTime}" FontSize="10" Foreground="{StaticResource PrimaryBrush}" Margin="4,0,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- Status Message -->
                                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                                   Text="{Binding StatusMessage}" 
                                                   FontSize="9" 
                                                   Foreground="{StaticResource TextTertiaryBrush}"
                                                   FontStyle="Italic"
                                                   Margin="0,2,0,0"
                                                   TextWrapping="Wrap"/>
                                        
                                        <!-- Remove Button -->
                                        <Button Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" 
                                                Content="×" 
                                                Command="{Binding DataContext.RemoveFromBatchCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Background="{DynamicResource ErrorBrush}"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Width="20" Height="20"
                                                Margin="4,0,0,0"
                                                Padding="0"
                                                ToolTip="Remove this file from the batch queue"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty Queue Placeholder -->
                    <Border Background="{DynamicResource BackgroundAltBrush}" 
                            BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="2" 
                            CornerRadius="{StaticResource RadiusM}" 
                            Padding="{StaticResource ThicknessXL}"
                            Visibility="{Binding State.HasBatchQueue, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <Border.Effect>
                            <DropShadowEffect Color="{Binding Source={StaticResource PrimaryColor}}"
                                              BlurRadius="10"
                                              ShadowDepth="0"
                                              Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                       Text="{StaticResource IconFolder}" 
                                       FontSize="48" 
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="No files in queue" 
                                       FontSize="{StaticResource FontSizeBody}" 
                                       FontWeight="{StaticResource FontWeightSemiBold}" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Drag &amp; drop video files here to add them to the queue" 
                                       FontSize="{StaticResource FontSizeSmall}" 
                                       FontStyle="Italic" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Queue Progress -->
                <StackPanel Grid.Row="3" Margin="0,8,0,0" 
                            Visibility="{Binding State.HasBatchQueue, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding State.BatchProgressText}" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               FontSize="11"/>
                    <ProgressBar Value="{Binding State.BatchProgressPercentage}" 
                                 Height="15" 
                                 Margin="0,4,0,0"
                                 ToolTip="Batch processing progress&#x0a;Shows overall completion percentage for all files in queue&#x0a;Updated in real-time as each file is processed"/>
                    <TextBlock Text="{Binding State.BatchProgressMessage}" 
                               HorizontalAlignment="Center" 
                               FontStyle="Italic" 
                               FontSize="10"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
    
        </DockPanel>
        
        <!-- Drag & Drop Overlay -->
        <Border x:Name="DragDropOverlay"
                Background="#CC1E1E1E"
                Visibility="Collapsed"
                IsHitTestVisible="False">
            <Border BorderBrush="{StaticResource PrimaryBrush}"
                    BorderThickness="4"
                    CornerRadius="{StaticResource RadiusL}"
                    Margin="20"
                    Background="#40000000">
                <Border.Effect>
                    <DropShadowEffect Color="{Binding Source={StaticResource PrimaryColor}}"
                                      BlurRadius="20"
                                      ShadowDepth="0"
                                      Opacity="0.8"/>
                </Border.Effect>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock FontFamily="{StaticResource IconFontFamily}"
                               Text="{StaticResource IconFolder}"
                               FontSize="96"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <TextBlock x:Name="DragDropMessage"
                               Text="Drop MKV/MP4 files here"
                               FontSize="32"
                               FontWeight="{StaticResource FontWeightBold}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="to add to batch queue"
                               FontSize="20"
                               Foreground="#CCFFFFFF"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
        
        <!-- Toast Notification Container -->
        <ItemsControl x:Name="ToastContainer"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Right"
                     Margin="0,0,20,20"
                     Panel.ZIndex="9999">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel VerticalAlignment="Bottom"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</Window>
