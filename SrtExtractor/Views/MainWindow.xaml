    <Window x:Class="SrtExtractor.Views.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:SrtExtractor.Views"
            xmlns:converters="clr-namespace:SrtExtractor.Converters"
            mc:Ignorable="d"
            Title="SrtExtractor - MKV/MP4 Subtitle Extractor"
            Height="900" Width="1250"
            MinHeight="700" MinWidth="1000"
            Background="White">
    
    <!-- Keyboard Shortcuts -->
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding PickMkvCommand}"/>
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding ProbeCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ExtractCommand}"/>
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{Binding ToggleBatchModeCommand}"/>
        <KeyBinding Key="C" Modifiers="Ctrl" Command="{Binding CancelCommand}"/>
        <KeyBinding Key="F5" Command="{Binding ReDetectToolsCommand}"/>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
    </Window.InputBindings>
    
    <Window.Resources>
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:DoubleToVisibilityConverter x:Key="DoubleToVisibilityConverter"/>
        <converters:StatusToIconConverter x:Key="StatusToIconConverter"/>
        <converters:StatusToBackgroundConverter x:Key="StatusToBackgroundConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- DataGrid Selection Style -->
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
        <MenuItem Header="_File">
            <MenuItem Header="_Open Video File..." 
                      Command="{Binding PickMkvCommand}"
                      InputGestureText="Ctrl+O"
                      ToolTip="Select a video file to extract subtitles from"/>
            <Separator/>
            <MenuItem Header="_Recent Files"
                      Name="RecentFilesMenuItem"
                      ToolTip="Quick access to recently processed video files">
                <MenuItem Header="No recent files"
                          Name="NoRecentFilesMenuItem"
                          IsEnabled="False"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="E_xit" 
                      Click="ExitMenuItem_Click"
                      InputGestureText="Alt+F4"
                      ToolTip="Close the application"/>
        </MenuItem>
        
        <MenuItem Header="_Edit">
            <MenuItem Header="_Cancel Operation" 
                      Command="{Binding CancelCommand}"
                      InputGestureText="Ctrl+C"
                      ToolTip="Cancel the current operation"/>
        </MenuItem>
        
        <MenuItem Header="_Tools">
            <MenuItem Header="_Probe Tracks" 
                      Command="{Binding ProbeCommand}"
                      InputGestureText="Ctrl+P"
                      ToolTip="Analyze the video file to find available subtitle tracks"/>
            <MenuItem Header="_Extract Subtitles" 
                      Command="{Binding ExtractCommand}"
                      InputGestureText="Ctrl+E"
                      ToolTip="Extract the selected subtitle track to SRT format"/>
            <Separator/>
            <MenuItem Header="Re-_detect Tools" 
                      Command="{Binding ReDetectToolsCommand}"
                      InputGestureText="F5"
                      ToolTip="Re-detect and verify external tools (MKVToolNix, FFmpeg, etc.)"/>
            <MenuItem Header="_SRT Correction" 
                      Click="SrtCorrection_Click"
                      ToolTip="Correct OCR errors in SRT files (single file or batch)"/>
        </MenuItem>
        
        <MenuItem Header="_Options">
            <MenuItem Header="_Toggle Batch Mode" 
                      IsCheckable="True"
                      IsChecked="{Binding State.IsBatchMode}"
                      InputGestureText="Ctrl+B"
                      ToolTip="Enable batch processing mode for multiple files"/>
            <Separator/>
            <MenuItem Header="_Subtitle Preferences"
                      ToolTip="Configure subtitle selection preferences">
                <MenuItem Header="_Prefer Forced Subtitles" 
                          IsCheckable="True"
                          IsChecked="{Binding State.PreferForced}"
                          Click="PreferForcedMenuItem_Click"
                          ToolTip="Prioritize forced subtitles (usually foreign dialogue)"/>
                <MenuItem Header="Prefer _Closed Captions" 
                          IsCheckable="True"
                          IsChecked="{Binding State.PreferClosedCaptions}"
                          Click="PreferClosedCaptionsMenuItem_Click"
                          ToolTip="Prioritize closed caption subtitles (usually full dialogue)"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="_Settings..." 
                      Click="SettingsMenuItem_Click"
                      ToolTip="Open application settings and preferences"/>
        </MenuItem>
        
        <MenuItem Header="_Help">
            <MenuItem Header="_Keyboard Shortcuts" 
                      Click="KeyboardShortcuts_Click"
                      ToolTip="View all available keyboard shortcuts"/>
            <MenuItem Header="_User Guide" 
                      Click="UserGuide_Click"
                      ToolTip="Open the user guide and documentation"/>
            <Separator/>
            <MenuItem Header="_About SrtExtractor..." 
                      Click="AboutMenuItem_Click"
                      ToolTip="Show application information and version"/>
        </MenuItem>
    </Menu>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="{Binding State.QueueColumnWidth}" x:Name="QueueColumn" MinWidth="0"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        <!-- File Selection Row -->
        <GroupBox Header="Video File" Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <Button Content="Pick Video..." 
                        Command="{Binding PickMkvCommand}"
                        IsEnabled="{Binding State.IsBusy, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                        ToolTip="Select a video file to extract subtitles from (Ctrl+O)"/>
                <TextBox Text="{Binding State.MkvPath}" 
                         IsReadOnly="True" 
                         Margin="4,0"
                         VerticalAlignment="Center"
                         MinWidth="300"
                         ToolTip="Path to the selected video file"/>
            </StackPanel>
        </GroupBox>


        <!-- Settings Row -->
        <GroupBox Header="Settings" Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <!-- Batch Mode Checkbox -->
                <CheckBox Content="🎬 Enable Batch Mode (Process Multiple Files)" 
                          IsChecked="{Binding State.IsBatchMode}"
                          VerticalAlignment="Center"
                          FontWeight="Bold"
                          Foreground="DarkBlue"
                          Margin="0,5"
                          ToolTip="Enable batch processing mode for multiple files (Ctrl+B)"/>
                
                <!-- Subtitle Preference Radio Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <RadioButton Content="Prefer forced subtitles" 
                                 IsChecked="{Binding State.PreferForced}"
                                 GroupName="SubtitlePreference"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 ToolTip="Prioritize forced subtitles (usually foreign dialogue)"/>
                    <RadioButton Content="Prefer CC (Closed Captions)" 
                                 IsChecked="{Binding State.PreferClosedCaptions}"
                                 GroupName="SubtitlePreference"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 ToolTip="Prioritize closed caption subtitles (usually full dialogue)"/>
                </StackPanel>
                
                <!-- Batch Mode Instructions -->
                <Border Background="#E3F2FD" 
                        BorderBrush="#2196F3" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Padding="12" 
                        Margin="0,10,0,0"
                        Visibility="{Binding State.IsBatchMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="📋 How to use Batch Mode:" 
                                   FontWeight="SemiBold" 
                                   FontSize="13" 
                                   Foreground="#1976D2"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="1. Enable Batch Mode above ✓" 
                                   FontSize="12" 
                                   Foreground="#1976D2"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="2. Drag &amp; drop MKV/MP4 files anywhere on this window" 
                                   FontSize="12" 
                                   Foreground="#1976D2"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="3. Click 'Process Batch' to extract subtitles from all files" 
                                   FontSize="12" 
                                   Foreground="#1976D2"
                                   Margin="0,2,0,0"/>
                        <TextBlock FontSize="11" 
                                   FontStyle="Italic" 
                                   Foreground="#666666"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="💡 All files will use your preferred settings: {0} subtitles, {1} language">
                                    <Binding Path="State.PreferForced" Converter="{StaticResource BoolToStatusConverter}"/>
                                    <Binding Path="State.OcrLanguage"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="OCR Language:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox SelectedItem="{Binding State.OcrLanguage}" 
                              ItemsSource="{Binding State.AvailableLanguages}"
                              Width="80"
                              Margin="0,0,20,0"
                              ToolTip="Select the language for OCR text recognition"/>
                    <TextBlock Text="File Pattern:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox Text="{Binding State.FileNamePattern}" 
                             Width="200"
                             ToolTip="Pattern: {basename}.{lang}{forced}{cc}.srt"/>
                </StackPanel>

                <!-- Network Warning -->
                <Border Background="LightYellow" 
                        BorderBrush="Orange" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="8" 
                        Margin="0,10,0,0"
                        Visibility="{Binding State.ShowNetworkWarning, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="⚠️ Network File Detected" 
                                   FontWeight="Bold" 
                                   Foreground="DarkOrange"/>
                        <TextBlock Text="{Binding State.NetworkWarningMessage}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <GroupBox Header="Actions" Grid.Row="1" Grid.Column="0">
            <StackPanel>
                <!-- Single File Mode Actions -->
                <StackPanel Orientation="Horizontal" 
                            Visibility="{Binding State.ShowSingleFileMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Content="Probe Tracks" 
                            Command="{Binding ProbeCommand}"
                            IsEnabled="{Binding State.CanProbe}"
                            Background="LightBlue"
                            ToolTip="Analyze the video file to find available subtitle tracks (Ctrl+P)"/>
                    <Button Content="Extract Selected → SRT" 
                            Command="{Binding ExtractCommand}"
                            IsEnabled="{Binding State.CanExtract}"
                            Background="LightCoral"
                            ToolTip="Extract the selected subtitle track to SRT format (Ctrl+E)"/>
                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            IsEnabled="{Binding State.IsProcessing}"
                            Background="Orange"
                            Visibility="{Binding State.IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                            ToolTip="Cancel the current operation (Ctrl+C or Esc)"/>
                </StackPanel>
                
                <!-- Batch Mode Actions -->
                <StackPanel Orientation="Horizontal" 
                            Visibility="{Binding State.ShowBatchMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Content="🚀 Process Batch" 
                            Command="{Binding ProcessBatchCommand}"
                            IsEnabled="{Binding State.HasBatchQueue}"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            Padding="16,8"
                            Margin="0,0,10,0"
                            ToolTip="Process all files in the batch queue with current settings"/>
                    <Button Content="Cancel Batch" 
                            Command="{Binding CancelCommand}"
                            IsEnabled="{Binding State.IsProcessing}"
                            Background="#FF9800"
                            Foreground="White"
                            FontWeight="Bold"
                            Padding="16,8"
                            Visibility="{Binding State.IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                            ToolTip="Cancel the current batch operation (Ctrl+C or Esc)"/>
                </StackPanel>
                
                <!-- Common Actions -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Clear Log" 
                            Click="ClearLog_Click"
                            Background="LightGray"
                            ToolTip="Clear the log display"/>
                    <Button Content="🔧 SRT Correction" 
                            Click="SrtCorrection_Click"
                            Background="LightGreen"
                            Margin="10,0,0,0"
                            ToolTip="Correct OCR errors in SRT files (single file or batch)"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Processing Indicator -->
        <GroupBox Header="Processing" Grid.Row="2" Grid.Column="1" Visibility="{Binding State.IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                            Width="20" 
                            Height="20" 
                            Margin="0,0,10,0"
                            ToolTip="Processing operation in progress"/>
                <TextBlock Text="{Binding State.ProcessingMessage}" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <!-- Track List -->
        <GroupBox Header="Subtitle Tracks" Grid.Row="3" Grid.ColumnSpan="2"
                  Visibility="{Binding State.ShowSingleFileMode, Converter={StaticResource BoolToVisibilityConverter}}">
            <DataGrid ItemsSource="{Binding State.Tracks}" 
                      SelectedItem="{Binding State.SelectedTrack}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      MaxHeight="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="40">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Track ID number from the video file"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Codec" 
                                        Binding="{Binding Codec}" 
                                        Width="120">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Subtitle format (SRT, ASS, VOBSUB, etc.)"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Language" 
                                        Binding="{Binding Language}" 
                                        Width="80">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Subtitle language code (en, es, fr, etc.)"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Type" 
                                        Binding="{Binding TrackType}" 
                                        Width="80">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Subtitle track type (subtitles, captions, etc.)"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridCheckBoxColumn Header="Forced" 
                                            Binding="{Binding Forced}" 
                                            Width="60">
                        <DataGridCheckBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Indicates if this is a forced subtitle track"/>
                            </Style>
                        </DataGridCheckBoxColumn.HeaderStyle>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn Header="Recommended" 
                                        Binding="{Binding IsRecommended}" 
                                        Width="100">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Shows if this track matches your preferences"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="⭐ Recommended"/>
                                <Setter Property="Foreground" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRecommended}" Value="False">
                                        <Setter Property="Text" Value=""/>
                                        <Setter Property="Foreground" Value="Transparent"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Bitrate" 
                                        Binding="{Binding Bitrate, StringFormat='{}{0:N0} bps'}" 
                                        Width="100">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Data rate in bits per second"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Frames" 
                                        Binding="{Binding FrameCount}" 
                                        Width="70">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Number of subtitle frames/segments"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Duration" 
                                        Binding="{Binding Duration, Converter={StaticResource DurationConverter}}" 
                                        Width="100">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Total duration of the subtitle track"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Name" 
                                        Binding="{Binding Name}" 
                                        Width="*">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ToolTip" Value="Custom name or title of the subtitle track"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Log Display -->
        <GroupBox Header="Log" Grid.Row="4" Grid.ColumnSpan="2">
            <ScrollViewer Height="250" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox Text="{Binding State.LogText}" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Disabled"
                         HorizontalScrollBarVisibility="Disabled"
                         Background="Black" 
                         Foreground="LightGreen"
                         FontFamily="Consolas"
                         FontSize="11"/>
            </ScrollViewer>
        </GroupBox>

        </Grid>

        <!-- Queue Panel -->
        <GroupBox Header="🎬 Batch Queue" Grid.Column="1" 
                  Visibility="{Binding State.QueueColumnWidth, Converter={StaticResource DoubleToVisibilityConverter}}"
                  Background="#F8FAFC"
                  BorderBrush="#E2E8F0"
                  BorderThickness="1"
                  AllowDrop="True"
                  Drop="QueuePanel_Drop"
                  DragEnter="QueuePanel_DragEnter"
                  DragOver="QueuePanel_DragOver"
                  DragLeave="QueuePanel_DragLeave">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Queue Instructions -->
                <Border Grid.Row="0" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="📁 Drag &amp; drop video files here" FontWeight="SemiBold" FontSize="13" Foreground="#374151" HorizontalAlignment="Center"/>
                        <TextBlock Text="Supports: MKV, MP4" FontSize="11" Foreground="#6B7280" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Queue Header -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Files in Queue:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding State.BatchQueue.Count, StringFormat='{}{0}'}" 
                               FontWeight="Bold" 
                               Foreground="Blue"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0"/>
                    <Button Content="Clear All" 
                            Command="{Binding ClearBatchQueueCommand}"
                            Background="LightCoral"
                            Margin="10,0,0,0"
                            Padding="4,2"
                            FontSize="10"
                            Visibility="{Binding State.HasBatchQueue, Converter={StaticResource BoolToVisibilityConverter}}"
                            ToolTip="Remove all files from the batch queue"/>
                </StackPanel>
                
                <!-- Queue List -->
                <Grid Grid.Row="2">
                    <ListBox ItemsSource="{Binding State.BatchQueue}"
                             Background="White"
                             BorderBrush="Gray"
                             BorderThickness="1"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Margin="2" Padding="8">
                                    <Border.Background>
                                        <Binding Path="Status" Converter="{StaticResource StatusToBackgroundConverter}"/>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Status Indicator -->
                                        <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0">
                                            <TextBlock.Text>
                                                <Binding Path="Status" Converter="{StaticResource StatusToIconConverter}"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        
                                        <!-- File Info -->
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   Text="{Binding FileName}" 
                                                   FontWeight="Bold" 
                                                   TextWrapping="Wrap"
                                                   MaxWidth="180"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   Text="{Binding FormattedFileSize}" 
                                                   FontSize="10" 
                                                   Foreground="Gray"
                                                   Margin="0,2,0,0"/>
                                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding NetworkIndicator}" FontSize="12"/>
                                            <TextBlock Text="{Binding FormattedEstimatedTime}" FontSize="10" Foreground="Blue" Margin="4,0,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- Status Message -->
                                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                                   Text="{Binding StatusMessage}" 
                                                   FontSize="9" 
                                                   Foreground="DarkGray"
                                                   FontStyle="Italic"
                                                   Margin="0,2,0,0"
                                                   TextWrapping="Wrap"/>
                                        
                                        <!-- Remove Button -->
                                        <Button Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" 
                                                Content="×" 
                                                Command="{Binding DataContext.RemoveFromBatchCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Background="LightCoral"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Width="20" Height="20"
                                                Margin="4,0,0,0"
                                                Padding="0"
                                                ToolTip="Remove this file from the batch queue"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty Queue Placeholder -->
                    <Border Background="#F9FAFB" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="20"
                            Visibility="{Binding State.HasBatchQueue, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📂" 
                                       FontSize="32" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="No files in queue" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#374151"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Drag &amp; drop video files here to add them to the queue" 
                                       FontSize="12" 
                                       FontStyle="Italic" 
                                       Foreground="#6B7280" 
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Queue Progress -->
                <StackPanel Grid.Row="3" Margin="0,8,0,0" 
                            Visibility="{Binding State.HasBatchQueue, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding State.BatchProgressText}" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               FontSize="11"/>
                    <ProgressBar Value="{Binding State.BatchProgressPercentage}" 
                                 Height="15" 
                                 Margin="0,4,0,0"
                                 ToolTip="Batch processing progress"/>
                    <TextBlock Text="{Binding State.BatchProgressMessage}" 
                               HorizontalAlignment="Center" 
                               FontStyle="Italic" 
                               FontSize="10"
