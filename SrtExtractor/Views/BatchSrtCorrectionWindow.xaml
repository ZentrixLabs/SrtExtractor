<Window x:Class="SrtExtractor.Views.BatchSrtCorrectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SrtExtractor.Views"
        xmlns:converters="clr-namespace:SrtExtractor.Converters"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Batch SRT Correction" 
        Height="600" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
                    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundAltBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="{StaticResource ThicknessXS}"/>
            <Setter Property="Padding" Value="{StaticResource ThicknessS}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <GroupBox Header="📁 Folder Selection" Grid.Row="0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="Select Folder..." 
                            Command="{Binding SelectFolderCommand}"
                            Background="LightBlue"
                            IsEnabled="{Binding IsNotProcessing}"/>
                    <TextBox Text="{Binding SelectedFolder}" 
                             IsReadOnly="True" 
                             Margin="8,0"
                             VerticalAlignment="Center"
                             MinWidth="400"/>
                    <Button Content="🔍 Scan for SRT Files" 
                            Command="{Binding ScanFolderCommand}"
                            Background="LightGreen"
                            IsEnabled="{Binding HasSelectedFolder}"
                            Margin="8,0,0,0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="Include subfolders" 
                              IsChecked="{Binding IncludeSubfolders}"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"/>
                    <CheckBox Content="Create backup copies" 
                              IsChecked="{Binding CreateBackups}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- File List -->
        <GroupBox Header="📄 SRT Files Found" Grid.Row="2">
            <Grid>
                <DataGrid ItemsSource="{Binding SrtFiles}"
                          SelectedItem="{Binding SelectedSrtFile}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          Background="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File Name" 
                                            Binding="{Binding FileName}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Folder" 
                                            Binding="{Binding Folder}" 
                                            Width="200"/>
                        <DataGridTextColumn Header="Size" 
                                            Binding="{Binding FormattedSize}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding Status}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Corrections" 
                                            Binding="{Binding CorrectionsApplied}" 
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Empty State -->
                <Border Background="{StaticResource BackgroundBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="{StaticResource RadiusM}" 
                        Padding="{StaticResource ThicknessXXL}"
                        Visibility="{Binding HasSrtFiles, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                                   Text="{StaticResource IconFolder}" 
                                   FontSize="48" 
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="No SRT files found" 
                                   FontSize="{StaticResource FontSizeSubtitle}" 
                                   FontWeight="{StaticResource FontWeightSemiBold}" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a folder and click 'Scan for SRT Files' to find subtitle files" 
                                   FontSize="{StaticResource FontSizeSmall}" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Progress -->
        <GroupBox Grid.Row="3" 
                  Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource IconFontFamily}" 
                               Text="{StaticResource IconPending}" 
                               FontSize="14" 
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Progress" VerticalAlignment="Center"/>
                </StackPanel>
            </GroupBox.Header>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Processing:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding CurrentFile}" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <ProgressBar Value="{Binding ProgressPercentage}" 
                             Height="20" 
                             Margin="0,0,0,4"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding ProgressText}" 
                               FontSize="12" 
                               Foreground="#666666"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="🚀 Start Batch Correction" 
                    Command="{Binding StartBatchCommand}"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    Padding="16,8"
                    IsEnabled="{Binding CanStartBatch}"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Background="#FF9800"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="16,8"
                    IsEnabled="{Binding IsProcessing}"/>
            <Button Content="Close" 
                    Click="CloseButton_Click"
                    Background="LightGray"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
