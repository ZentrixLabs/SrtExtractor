<Window x:Class="SrtExtractor.Views.SupOcrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:converters="clr-namespace:SrtExtractor.Converters"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Icon="pack://application:,,,/SrtExtractor.ico"
        Title="SUP OCR Tool - SrtExtractor" 
        Height="600" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="SUP OCR Tool" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Extract text from PGS subtitle images using Tesseract OCR" 
                       FontSize="12" 
                       Foreground="{StaticResource TextSecondaryBrush}" 
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- File Selection -->
                <GroupBox Header="Input File" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                 Text="{Binding SupFilePath, Mode=TwoWay}" 
                                 IsReadOnly="True"
                                 VerticalContentAlignment="Center"
                                 Padding="8"
                                 Margin="0,0,10,0"/>
                        
                        <Button Grid.Column="1" 
                                Content="Browse SUP File..." 
                                Command="{Binding BrowseSupFileCommand}"
                                MinWidth="150"/>
                    </Grid>
                </GroupBox>

                <!-- OCR Settings -->
                <GroupBox Header="OCR Settings" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Language:" Margin="0,0,10,0" MinWidth="100"/>
                            <ComboBox Grid.Column="1" 
                                      SelectedItem="{Binding OcrLanguage}"
                                      IsEditable="False">
                                <ComboBoxItem Content="eng" IsSelected="True"/>
                                <ComboBoxItem Content="fra"/>
                                <ComboBoxItem Content="deu"/>
                                <ComboBoxItem Content="spa"/>
                                <ComboBoxItem Content="ita"/>
                            </ComboBox>
                        </Grid>
                        
                        <CheckBox Content="Apply OCR correction after extraction" 
                                  IsChecked="{Binding ApplyCorrection}"
                                  Margin="0,10,0,5"
                                  FontWeight="Bold"/>
                        <TextBlock Text="Automatically fix common OCR errors using ZentrixLabs.OcrCorrection (~837 patterns)" 
                                   FontStyle="Italic" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   TextWrapping="Wrap"
                                   Margin="20,0,0,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Progress Section -->
                <GroupBox Header="Processing Status" 
                          Margin="0,0,0,15"
                          Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <!-- Status Message -->
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,5"/>
                        
                        <!-- Current Phase -->
                        <TextBlock Text="{Binding CurrentPhase}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"
                                   Visibility="{Binding CurrentPhase, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <!-- Enhanced Progress Bar -->
                        <Grid Margin="0,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Progress Bar with Animation -->
                            <Border Grid.Row="0" 
                                    Background="{StaticResource BackgroundAltBrush}" 
                                    BorderBrush="{StaticResource BorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="12" 
                                    Height="24" 
                                    Margin="0,0,0,8">
                                <Grid>
                                    <ProgressBar Value="{Binding ProgressPercentage}" 
                                                 Maximum="100" 
                                                 Minimum="0"
                                                 IsIndeterminate="{Binding IsIndeterminate}"
                                                 Background="Transparent"
                                                 Foreground="{StaticResource PrimaryBrush}"
                                                 BorderThickness="0"
                                                 Height="24"
                                                 VerticalAlignment="Center"/>
                                    
                                    <!-- Progress Text Overlay -->
                                    <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F1}%}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextOnPrimaryBrush}"
                                               Visibility="{Binding IsIndeterminate, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                            
                            <!-- Frame Count -->
                            <Grid Grid.Row="1" Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding ProcessedFrames}" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,5,0"/>
                                
                                <TextBlock Grid.Column="1" 
                                           Text=" / " 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding TotalFrames}" 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Left"
                                           Margin="5,0,0,0"/>
                            </Grid>
                            
                            <!-- Performance Metrics -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Processing Speed -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="Speed" 
                                               FontSize="10" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ProcessingSpeed, StringFormat={}{0:F1} fps}" 
                                               FontSize="12" 
                                               FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Elapsed Time -->
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="Elapsed" 
                                               FontSize="10" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ElapsedTime, StringFormat={}{0:mm\\:ss}}" 
                                               FontSize="12" 
                                               FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- ETA -->
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="ETA" 
                                               FontSize="10" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding EstimatedTimeRemaining, StringFormat={}{0:mm\\:ss}}" 
                                               FontSize="12" 
                                               FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        
                        <!-- Additional Progress Text -->
                        <TextBlock Text="{Binding ProgressText}" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </GroupBox>

                <!-- Results Log -->
                <GroupBox Header="Processing Log" Margin="0,0,0,15">
                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding LogMessages}" 
                                 IsReadOnly="True" 
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </ScrollViewer>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Start OCR" 
                    Command="{Binding StartOcrCommand}"
                    IsEnabled="{Binding CanStartOcr}"
                    Style="{StaticResource AccentButtonStyle}"
                    MinWidth="150"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Close" 
                    Click="CloseButton_Click"
                    Visibility="{Binding IsProcessing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</Window>

